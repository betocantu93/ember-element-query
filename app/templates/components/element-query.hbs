{{#let (element (or @tagName "div")) as |Tag|}}
  <Tag
    class="ElementQuery"

    {{element-query
      isDisabled=@isDisabled
      prefix=@prefix
      sizes=@sizes
      sizesHeight=@sizesHeight
      sizesRatio=@sizesRatio
      debounce=@debounce
      onResize=this.onResize
    }}

    ...attributes
  >
    {{yield this.eqInfo.attributesRecord this.eqInfo}}
  </Tag>
{{/let}}
